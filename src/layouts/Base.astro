---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style is:global>
      :root {
        --max-width: 640px;
        --font-mono: ui-monospace, SFMono-Regular, "SF Mono", Menlo, monospace;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        overflow-y: scroll;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        line-height: 1.6;
        color: #1a1a1a;
        max-width: var(--max-width);
        min-height: 100vh;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      a {
        color: inherit;
      }

      h1, h2, h3 {
        line-height: 1.3;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
      }

      h1 {
        font-family: "Instrument Serif", serif;
        font-style: italic;
        font-size: 2.25rem;
        font-weight: 400;
      }
      h2 {
        font-family: "Instrument Serif", serif;
        font-size: 1.5rem;
        font-weight: 400;
      }
      h3 {
        font-family: "Instrument Serif", serif;
        font-size: 1.25rem;
        font-weight: 400;
      }

      p {
        margin-bottom: 1em;
      }

      ul, ol {
        margin-bottom: 1em;
        padding-left: 1.5em;
      }

      blockquote {
        border-left: 2px solid #ccc;
        padding-left: 1em;
        margin: 1em 0;
        color: #666;
      }

      code {
        font-family: var(--font-mono);
        font-size: 0.9em;
        background: #f4f4f4;
        padding: 0.1em 0.3em;
        border-radius: 3px;
      }

      pre {
        background: #f4f4f4;
        padding: 1em;
        overflow-x: auto;
        margin-bottom: 1em;
        border-radius: 4px;
      }

      pre code {
        background: none;
        padding: 0;
      }

      .prose img {
        max-width: 100%;
        height: auto;
      }

      .btn {
        display: inline-block;
        padding: 0.4rem 0.75rem;
        background: #fff;
        border: 1px solid #d0d0d0;
        border-radius: 6px;
        box-shadow: 0 2px 0 #c0c0c0;
        text-decoration: none;
        color: #333;
        font-size: 0.875rem;
        cursor: pointer;
        transition: transform 0.1s, box-shadow 0.1s;
      }
      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 0 #c0c0c0;
      }
      .btn:active {
        transform: translateY(2px);
        box-shadow: 0 0 0 #c0c0c0;
      }

      .scroll-blur-bottom {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        height: 3rem;
        background: linear-gradient(to top, #fff 0%, transparent 100%);
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.2s ease;
        z-index: 100;
      }
      .scroll-blur-bottom.visible {
        opacity: 1;
      }
    </style>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const blurEl = document.querySelector('.scroll-blur-bottom');
        if (!blurEl) return;

        const updateBlur = () => {
          const scrollTop = window.scrollY;
          const docHeight = document.documentElement.scrollHeight;
          const winHeight = window.innerHeight;
          const maxScroll = docHeight - winHeight;

          blurEl.classList.toggle('visible', scrollTop < maxScroll - 10);
        };

        window.addEventListener('scroll', updateBlur);
        window.addEventListener('resize', updateBlur);
        updateBlur();
      });
    </script>
  </head>
  <body>
    <slot />
    <div class="scroll-blur-bottom"></div>
  </body>
</html>
