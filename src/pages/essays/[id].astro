---
import { getCollection, render } from "astro:content";
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Giscus from "../../components/Giscus.astro";

export async function getStaticPaths() {
  const essays = await getCollection("essays");
  return essays.map((essay) => ({
    params: { id: essay.id },
    props: { essay },
  }));
}

const { essay } = Astro.props;
const { Content } = await render(essay);

const date = essay.data.created_at.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Base title={essay.data.title}>
  <Header currentPage="essays" showGoBack={true} title={essay.data.title} subtitle={date} />

  <article>
    <div class="prose">
      <Content />
    </div>
  </article>

  <Giscus category="essays" />
</Base>
